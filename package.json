{
  "name": "flow",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prisma:generate": "turbo run generate --filter=@flow/prisma"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "tsx": "^4.19.4",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
